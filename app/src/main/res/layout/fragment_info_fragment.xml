<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/appabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:baselineAligned="false"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/iconloginuchun"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0"
                        android:src="@drawable/icon"
                        android:transitionName="logo_image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="serif"
                            android:includeFontPadding="false"
                            android:text="E-Kutubxona"
                            android:textAllCaps="true"
                            android:textColor="@color/txt1"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:includeFontPadding="false"
                            android:text="''Elektron kutubxona tizimini shakilantirishda mobil ilovasini ishlab chiqish''  mavzusida tayyorlangan bituruv malakaviy ishi"
                            android:textColor="@color/txt1"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_refresh_24"
                        android:layout_weight="0"
                        android:transitionName="logo_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:includeFontPadding="false"
                        android:text="Version  1.0"
                        android:textColor="@color/txt1"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_info_24"
                        android:transitionName="logo_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:includeFontPadding="false"
                        android:text="License"
                        android:textColor="@color/txt1"
                        android:textSize="18sp"
                        android:textStyle="italic" />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/authorabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Author"
                    android:textColor="@color/txt1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_account_circle_24"
                        android:transitionName="logo_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:includeFontPadding="false"
                            android:text="Sapayev Jurat"
                            android:textColor="@color/txt1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:includeFontPadding="false"
                            android:text="Talaba TATU_UF"
                            android:textColor="@color/txt1"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_email_24"
                        android:transitionName="logo_image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:includeFontPadding="false"
                        android:text="sapayevjurat01@gmail.com"
                        android:textColor="@color/txt1"
                        android:textSize="12sp"
                        android:textStyle="italic" />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>





    </LinearLayout>


</androidx.core.widget.NestedScrollView>
